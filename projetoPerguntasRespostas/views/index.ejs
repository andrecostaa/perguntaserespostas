<div class="container">
    <hr>
    <h1>Perguntas</h1>
    <hr>
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr>
    <% listaPerguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <h3> <%= pergunta.titulo %> </h3>
        </div>
        <div class="card-footer">
            <a class="btn btn-success" href="/pergunta/<%= pergunta.id %>">Responder</a>
        </div>
    <% }) %>

</div>

</body>
